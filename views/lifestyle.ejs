<body style="background-color: #CFE1B9;">

    <header>
        <%- include('partials/header.ejs') %>
            <style>
                #header {
                    background-color: #718355;
                }
                .date {
                    color: #617147;
                }
                .title {
                    color: #6a7e49;
                }
                .quote {
